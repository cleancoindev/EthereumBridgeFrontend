:global(.rc-table-content) {
  border: 1px solid Basic200;
  border-top: none;
  border-bottom: none;
}

:global(.rc-table-body, .rc-table-header) {
  border-color: Basic200;
}

:global(.rc-table-body::after) {
  border-color: Basic200 !important;
}

:global(.rc-table-cell-fix-left-last::after) {
  box-shadow: inset 10px 0 8px -8px Basic400;
}

:global(.rc-table-ping-left) {
  :global(.rc-table-cell-fix-left-last::after) {
    box-shadow: inset 14px 0 8px -8px Basic400 !important;
  }
}
